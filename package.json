{
    "name": "hiero-enterprise-js",
    "version": "0.1.0",
    "private": true,
    "description": "Enterprise-grade TypeScript library for Hiero networks",
    "type": "module",
    "license": "Apache-2.0",
    "scripts": {
        "build": "pnpm -r run build",
        "test": "vitest run",
        "test:watch": "vitest",
        "lint": "pnpm run lint:types && pnpm run lint:eslint",
        "lint:types": "pnpm -r run build",
        "lint:eslint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "clean": "pnpm -r run clean && rm -rf node_modules"
    },
    "devDependencies": {
        "@eslint/js": "^10.0.1",
        "@types/node": "^22.0.0",
        "eslint": "^10.0.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.5",
        "prettier": "^3.8.1",
        "typescript": "^5.7.0",
        "typescript-eslint": "^8.56.0",
        "vitest": "^3.0.0"
    }
}
